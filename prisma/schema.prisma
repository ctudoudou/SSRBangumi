generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  username       String          @unique
  password       String
  avatar         String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  animes         Anime[]
  rssFeeds       RssFeed[]
  aiConfig       AiConfig?
  downloadConfig DownloadConfig?

  @@map("users")
}

model Anime {
  id             String   @id @default(cuid())
  title          String
  description    String?
  imageUrl       String?
  status         String   @default("未开播")
  episodes       Int      @default(0)
  currentEpisode Int      @default(0)
  rating         Float    @default(0)
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("animes")
}

model RssFeed {
  id            String    @id @default(cuid())
  name          String
  url           String
  description   String?
  isActive      Boolean   @default(true)
  updateFreq    Int       @default(60) // 更新频次（分钟）
  lastChecked   DateTime? // 最后检查时间
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  rssItems      RssItem[]

  @@map("rss_feeds")
}

model RssItem {
  id          String   @id @default(cuid())
  title       String
  description String?
  link        String
  pubDate     DateTime?
  guid        String?  @unique
  processed   Boolean  @default(false)
  rssFeedId   String
  rssFeed     RssFeed  @relation(fields: [rssFeedId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("rss_items")
}

model AiConfig {
  id                      String   @id @default(cuid())
  apiKey                  String?
  proxyUrl                String?  @default("https://openrouter.ai/api/v1")
  model                   String?  @default("anthropic/claude-3.5-sonnet")
  smartTorrentRecognition Boolean  @default(false)
  userId                  String   @unique
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@map("ai_configs")
}

model DownloadConfig {
  id           String   @id @default(cuid())
  rpcUrl       String   @default("http://localhost:6800/jsonrpc")
  rpcSecret    String?
  downloadPath String   @default("/downloads")
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("download_configs")
}
